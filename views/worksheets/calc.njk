<html>

<head>
    <title>{{ worksheet.title }}</title>
    <link rel="stylesheet" href="/stylesheets/calc-style.css">
</head>

<body>
    <h3>{{ worksheet.title }}</h3>
    <h4>{{ worksheet.description }}</h4>
    <table>
        <thead>
            <tr>
                <th colspan="2">NAME</th>
                <th rowspan="2">AVERAGE</th>
                <th colspan="2">RESTING</th>
                <th colspan="2">TEST</th>
                <th colspan="2">BODY COMP</th>
                <th colspan="2">BODY FLEX</th>
                <th colspan="2">SIT UPS</th>
                <th colspan="2">BENCH PRESS</th>
                <th colspan="2">LEG PRESS</th>
                <th colspan="4">RUN OR WALK</th>
                <tr>
                    <th>Last</th>
                    <th>First</th>
                    <th>Heart Rate</th>
                    <th>Blood Pressure</th>
                    <th>Weight</th>
                    <th>Age</th>
                    <th>#</th>
                    <th>%</th>
                    <th>#</th>
                    <th>%</th>
                    <th>#</th>
                    <th>%</th>
                    <th>#</th>
                    <th>%</th>
                    <th>#</th>
                    <th>%</th>
                    <th>Option</th>
                    <th>Time</th>
                    <th>HR</th>
                    <th>%</th>
                </tr>
        </thead>
        <tbody>
            {% for assessment in worksheet.assessments %}
            <tr class="result-row">
                <td class="last">{{ assessment.participant.name.last }}</td>
                <td class="first">{{ assessment.participant.name.first }}</td>
                <td class="ave">?</td>
                <td class="hr">{{ assessment.heart_rate }}</td>
                <td class="bp">{{ assessment.blood_pressure }}</td>
                <td class="weight">{{ assessment.weight }}</td>
                <td class="age">?</td>
                <td class="body">{{ assessment.body_fat }}</td>
                <td class="body-result">?</td>
                <td class="flex">{{ assessment.flex }}</td>
                <td class="flex-result">?</td>
                <td class="sit">{{ assessment.situp }}</td>
                <td class="sit-result">?</td>
                <td class="bench">{{ assessment.bench }}</td>
                <td class="bench-result">?</td>
                <td class="leg">{{ assessment.leg }}</td>
                <td class="leg-result">?</td>
                <td class="cardio-type">{{ assessment.cardio.type }}</td>
                <td class="cardio-time">{{ assessment.cardio.time }}</td>
                <td class="cardio-hr">
                    {% if assessment.cardio.heart_rate %}
                        {{ assessment.cardio.heart_rate }}
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td class="cardio-result">?</td>
                <!-- items not visible on page -->
                <td class="sex">{{ assessment.participant.sex }}</td>
                <td class="dob">{{ assessment.participant.dob }}</td>
                <td class="eval-date">{{ assessment.eval_date }}</td>
                <td class="cardio-min">{{ assessment.cardio.min }}</td>
                <td class="cardio-sec">{{ assessment.cardio.sec }}</td>
            </tr>
            {% else %}
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            {% endfor %}
        </tbody>
    </table>
    <hr>
    <h3>Overall Report Averages</h3>
    <ul>
        <li>Body Composition - <span id="body-ave">???</span></li>
        <li>Flexibility - <span id="flex-ave">???</span></li>
        <li>Sit Ups - <span id="sit-ave">???</span></li>
        <li>Bench Press - <span id="bench-ave">???</span></li>
        <li>Leg Press - <span id="leg-ave">???</span></li>
        <li>1.5-mile Run - <span id="run-ave">???</span></li>
        <li>1-mile Walk - <span id="walk-ave">???</span></li>
        <li>Overall Score - <span id="overall-ave">???</span></li>
        <li>Total Participants - <span id="total-part">???</span></li>
    </ul>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <script src="/scripts/calcTables.js"></script>
    <script src="/scripts/calcScript.js"></script>
</body>
</html>

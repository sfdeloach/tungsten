{% extends "../template.njk" %}

{% block stylesheet %}
    <link rel="stylesheet" href="/stylesheets/style.css">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="jumbotron">
            <h2><i class="fa fa-table fa-lg" aria-hidden="true"></i>&nbsp;&nbsp;{{ worksheet.title }}</h2>
            <h4>created by <strong>{{ worksheet.author.username }}</strong> on {{ worksheet.created }}</h4>
            <div class="form-group">
                <a href="/worksheets" class="btn btn-default">
                    <i class="fa fa-chevron-left" aria-hidden="true"></i>
                    &nbsp;&nbsp;Return to index
                </a>
            </div>
        </div>
        <div class="row">
            <div class="column col-sm-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="col-width18">Name</th>
                            <th>Body</th>
                            <th>Flex</th>
                            <th>Situp</th>
                            <th>Bench</th>
                            <th>Leg</th>
                            <th>Cardio</th>
                            <th>Time</th>
                            <th>Heart</th>
                            <th class="col-width10">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                        <form action="/worksheets/{{ worksheet._id }}" method="POST">
                            <td class="col-width18">
                                <input class='form-control' list='participants' name='assessment[dept_id]' type='text' required autofocus>
                                <datalist id="participants">
                                {% for participant in participants %}
                                    <option value="{{ participant.dept_id }}">{{ participant.name.last }}, {{ participant.name.first }}</option>
                                {% endfor %}
                                </datalist>
                            </td>
                            <td><input class='form-control' name='assessment[body_fat]' type='number' step=0.1 required></td>
                            <td><input class='form-control' name='assessment[flex]' type='number' step=0.1 required></td>
                            <td><input class='form-control' name='assessment[situp]' type='number' required></td>
                            <td><input class='form-control' name='assessment[bench]' type='number' step=0.1 required></td>
                            <td><input class='form-control' name='assessment[leg]' type='number' step=0.1 required></td>
                            <td>
                                <select class='form-control' name='assessment[cardio_type]' >
                                    <option value="walk">walk</option>
                                    <option value="run">run</option>
                                </select>
                            </td>
                            <td><input class='form-control' name='assessment[cardio_time]' type='number' required></td>
                            <td><input class='form-control' name='assessment[cardio_heartrate]' type='number'></td>
                            <td class="col-width10">
                                <input class="btn btn-success btn-sm btn-block" type="submit" value="save">
                            </td>
                        </form>
                        </tr>
                    </tbody>
                </table>
                <table id="showTable" class="tablesorter table table-striped header-fixed">
                    <thead>
                        <tr>
                            <th class="col-width18">Name</th>
                            <th>Body</th>
                            <th>Flex</th>
                            <th>Situp</th>
                            <th>Bench</th>
                            <th>Leg</th>
                            <th>Cardio</th>
                            <th>Time</th>
                            <th>Heart</th>
                            <th class="col-width10">Edit/Delete</th>
                        </tr>
                    </thead>
                    <tbody id="showTableBody">
                        {% for assessment in worksheet.assessments %}
                        <tr>
                            <td class="col-width18">
                                <a href="todo">{{ assessment.participant.name.last }}, {{ assessment.participant.name.first}}</a>
                            </td>
                            <td>{{ assessment.body_fat }}</td>
                            <td>{{ assessment.flex }}</td>
                            <td>{{ assessment.situp }}</td>
                            <td>{{ assessment.bench }}</td>
                            <td>{{ assessment.leg }}</td>
                            <td>{{ assessment.cardio.type }}</td>
                            <td>{{ assessment.cardio.time }}</td>
                            <td>{{ assessment.cardio.heart_rate }}</td>
                            <td class="col-width10">
                                <button class="btn btn-primary btn-xs edit" type="submit">
                                    <i class="fa fa-edit fa-fw" aria-hidden="true"></i>
                                </button>
                                <form class="delete-form" action="/worksheets/{{ worksheet._id }}/{{ assessment._id }}?_method=DELETE" method="POST">
                                    <button class="btn btn-danger btn-xs delete" type="submit">
                                        <i class="fa fa-trash fa-fw" aria-hidden="true"></i>
                                    </button>
                                </form>
                                
                            </td>
                        </tr>
                        {% else %}
                            <td>no assessments to display</td>
                            <td> - </td>
                            <td> - </td>
                            <td> - </td>
                            <td> - </td>
                            <td> - </td>
                            <td> - </td>
                            <td> - </td>
                            <td> - </td>
                            <td> - </td>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}